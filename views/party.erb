<%= erb :header %>
<div class="container">
<div class="row">
        <div class="col-md">
            <h1><%= @party.name %></h1>
        </div>
        <div class="col-md">
            <a href=/parties/ class="button">Parties</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md">
            <% @members.each do |m| %>
                <div class="panel">
                    <h3><%= m.name %></h3>
                    <p><<%= m.race %></p>
                    <a href="/party/<%=@party.id%>/remove-character/"
                        class="remove-character button"
                        data-participant_id="<%=m.participant_id%>">
                        Remove
                    </a>

                </div>
            <%end%>
        </div>
        <div class="col-md">
            <a href="add-member/" class="button">Add New Member</a>
            <a href="new-character/" class="button">Create New Character</a>
        </div>
    </div>
</div>
<%= erb :footer %>
