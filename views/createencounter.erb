<form method="post" action="/newencounter/">
    <div class="row margin-bottom">
        <div class="col-sm">
            <select name="party_id">
                <option value="">Select a Party</option>
                <% @parties.each do |party| %>
                    <option value="<%= party.id %>">
                    <%= party.name%>
                    </option>
                <%end%>
            </select>
        </div>
    </div>
    <div class="row margin-bottom">
        <div class="col-sm">
            <label for="difficulty" value="">Select a Challenge</label><br/>
            <select name="difficulty">
                <option value="easy">Easy</option>
                <option selected value="medium">Medium</option>
                <option value="hard">Hard</option>
                <option value="deadly">Deadly</option>
            </select>
        </div>
    </div>
    <div class="row margin-bottom">
        <div class="col-sm">
            <label for="min_cr" value="">Select a min and max cr of monsters</label><br/>
            <select name="min_cr">
                <option value="">Select a Min CR</option>
                <% @challenge.each do |c| %>
                    <option value="<%= c.id %>" <%= 'selected' if c.id.to_i == params[:min_cr].to_i %>>
                    cr: <%= c.cr %> => <%= c.xp %>xp
                    </option>
                <%end%>
            </select>
        </div>
    </div>
    <div class="row margin-bottom">
        <div class="col-sm">
            <select name="max_cr">
                <option value="">Select a Max CR</option>
                <% @challenge.each do |c| %>
                    <option value="<%= c.id %>" <%= 'selected' if c.id.to_i == params[:max_cr].to_i %>>
                    cr: <%= c.cr %> => <%= c.xp %>xp
                    </option>
                <%end%>
            </select>
        </div>
    </div>
    <div class="row margin-bottom">
        <div class="col-sm">
            <label for="type_id" value="">Select a type of monster</label><br/>
            <select name="type_id">
                <option value="">Select a Type</option>
                <% @types.each do |t| %>
                    <option value="<%= t.id %>" <%= 'selected' if t.id.to_i == params[:type_id].to_i %>>
                    <%= t.name %>
                    </option>
                <%end%>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <input type="input" name="term" value="<%=params[:term]%>" placeholder="Must Include?">
        </div>
        <div class="col">
            <input type="submit" class="button" value="Create Encounter"/>
        </div>
    </div>
</form>
